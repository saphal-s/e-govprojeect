@model IEnumerable<empmgmt.Models.LeaveViewModel>

@{
    ViewData["Title"] = "Userleave";
}



<div class="row dash w-100">
    <div class="col-md-2 dashboard">
        <div class="admin_profile">
            <h2>Admin</h2>
        </div><hr />
        <div class="nav_link">
            <ul class="nav-links">
                 <li>
                     <a href="/Dashboard/Employeedash"><i class='bx bx-grid-alt' ></i> Dashboard</a>
                 </li>
                  <li>
                     <a href="/User/Profile"><i class='bx bxs-user-badge'></i>Profile</a>
                 </li>
                 <li>
                     <a href="/Leave/Userleave"><i class='bx bx-message' ></i> View Leave</a>
                 </li>
                 <li>
                     <a href="/User/Profile"><i class='bx bx-user' ></i> User</a>
                 </li>
                 <li>
                     <a href="/User/Logout"><i class='bx bx-exit'></i> Log Out</a>
                 </li>
             </ul>
        </div>
    </div>
    <div class="col-md-10 side">
        <div class="side_head">
            <h2 class="pt-4">Employee Management System -> Leave</h2>
        </div>
        <div class="sides">

            <p>
                <a asp-action="Create" class="create">Create New</a>
            </p>

            <table class="table pt-4">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Subject)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Message)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Schedule)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                         <th>
                            @Html.DisplayNameFor(model => model.Approve)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Subject)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Message)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Schedule)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @if (item.Approve)
                                {
                                    <p>True</p>
                                }
                                else
                                {
                                    <p>False</p>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>